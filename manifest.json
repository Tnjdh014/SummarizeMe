{
    "manifest_version": 3,
    "name": "SummarizeMe",
    "version": "1.0",
    "description": "A Chrome extension for summarizing PDF documents using AI.",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["index.html", "icon16.png", "icon48.png", "icon128.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  